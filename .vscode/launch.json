    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 调试当前文件",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug in console",
            "type": "python",
            "request": "launch",
            "program": "start.py",
            "args": [
                "run",
                "--env-file",
                "./.env"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
        },
        {
            "name": "Debug in browser",
            "type": "python",
            "request": "launch",
            "program": "start.py",
            "args": [
                "run",
                "--env-file",
                "./.env"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "serverReadyAction": {
                "pattern": "Uvicorn running on http://.*?:([0-9]+)",
                "uriFormat": "http://localhost:%s/docs",
                "action": "openExternally"
            }
        }
    ]
}